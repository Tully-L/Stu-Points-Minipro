.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: #fff;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.content {
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
}

/* 积分概况 */
.points-card {
  text-align: center;
  padding: 40rpx 0;
}

.points-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.points-value {
  font-size: 80rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.points-info {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 积分历史 */
.history-list {
  padding: 20rpx 0;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.history-info {
  flex: 1;
}

.history-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-points {
  font-size: 32rpx;
  font-weight: bold;
}

.history-points.plus {
  color: #07c160;
}

.history-points.minus {
  color: #ff4d4f;
}

/* 积分规则 */
.rules-list {
  padding: 20rpx 0;
}

.rule-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.rule-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.rule-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.rule-points {
  font-size: 28rpx;
  color: #07c160;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

/* 加载状态 */
.loading, .no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

.empty {
  padding: 100rpx 30rpx;
} 